      <script>
        const listWrap = document.querySelector(".m_list_wrap");
        const $buttons = document.querySelectorAll(".media button");
        const  firstCardWidth = listWrap.querySelector("li").offsetWidth;

        console.log(listWrap);
        $buttons.forEach(btn =>{
          btn.addEventListener("click", ()=>{
            listWrap.scrollLeft += btn.id === "next" ? firstCardWidth: -firstCardWidth;
          });
