<script>
  const $main = document.querySelector("main");
  const $pages = document.querySelectorAll("[data-page-tab]");
  const $tab = document.querySelector(".page-tab");

  $pages.forEach((page, index) =>{
    if(index === 0){
      const $scheduleTables = page.querySelectorAll(".content .table")
      const $scheduleCalendar = page.querySelector(".calendar");
      const $schedulePlist  = $scheduleCalendar.querySelectorAll("p")
      const $currentScheduleCalendar = page.querySelector(".calendar .current");
      const $scheduleTablesIndex = Array.from($schedulePlist).indexOf($currentScheduleCalendar);
      $scheduleTables.forEach(table =>{table.setAttribute("hidden", true)});
      $scheduleTables[$scheduleTablesIndex].removeAttribute("hidden");

    } else {
      page.setAttribute("hidden", true);
    }
});






function tabFunc () {

  $tab.addEventListener("click", (e)=>{
    const $clickedTab = e.target.closest("li");
    const $tabUl = $clickedTab.parentElement
    
    e.preventDefault();
    if(!$clickedTab) return;

    $tabUl.querySelectorAll("li").forEach(tab => { tab.classList.remove("activated")});
    $clickedTab.classList.add("activated");

    $tabUl.style.setProperty("--_left", $clickedTab.offsetLeft+"px");


    // page 선택 영역
    const clikedTadId = $clickedTab.querySelector("a").getAttribute("href");
    const currentPage = $main.querySelector(clikedTadId);

    $pages.forEach(page => {page.setAttribute("hidden", true)});
    currentPage.removeAttribute("hidden");
  });
}

tabFunc()

</script>
<script>

const calendarControl = () =>{
  const $activated = $tab.querySelector(".activated");
  const currentPageIndex = Array.from($tab.querySelectorAll("li")).indexOf($activated);
  const $currentPageTicket = $pages[currentPageIndex];
  
  const $calender = $currentPageTicket.querySelector(".calendar");
  const $monthWrap = $calender.querySelector(".year-month-list");

    $calender.addEventListener("click", (e)=>{
    const $button = e.target.closest("button");

    e.preventDefault();
    if(!$button) return;
    

    //달력 좌우 버튼 영역
    const $currentPosition = $calender.querySelector(".current");
    const $currentTables = $currentPageTicket.querySelectorAll(".table");
    const calendarIndex = [...$monthWrap.children]
    const currentCalendarIndex = calendarIndex.indexOf($currentPosition);


    console.log($currentTables)
    
    const offset = $button.dataset.direction === "next" ? 1 : -1;

    const futureMonth = currentCalendarIndex + offset;

    if  (futureMonth >= 0 && futureMonth < $monthWrap.children.length) {
      $monthWrap.querySelectorAll("p").forEach((month) => month.classList.remove("current"));
      $monthWrap.children[futureMonth].classList.add("current");

      $currentTables.forEach(table => {table.setAttribute("hidden", true)});
      $currentTables[futureMonth].removeAttribute("hidden");

      return
      };

  });



  $main.querySelector(".current-btn").addEventListener("click", ()=>{
    location.reload();
  });

};


calendarControl();
// recentBtn();

</script> 
</html>
